<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_min_height"
        android:id="@+id/cv_container"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:id="@+id/iv_thumnail"/>

            <LinearLayout
                android:layout_width="@dimen/default_play_size"
                android:layout_height="@dimen/default_play_size"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:id="@+id/ll_play"
                android:orientation="vertical"
                android:background="@drawable/btn_play"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ll_color"
                android:background="@drawable/background_radian_red"
                android:orientation="vertical"
                android:paddingLeft="@dimen/default_horizontal_margin"
                android:paddingRight="@dimen/default_horizontal_margin"
                android:paddingBottom="@dimen/default_vertical_margin"
                android:paddingTop="@dimen/default_vertical_margin"
                android:focusable="false"
                android:gravity="bottom">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_white"
                    android:id="@+id/tv_title"
                    android:textSize="@dimen/default_title_font"/>
            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>